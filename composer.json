{
    "name": "camelot/common",
    "description": "Common utilities for all Camelot libraries",
    "license": "MIT",
    "authors": [
        {
            "name": "Carson Full",
            "email": "carsonfull@gmail.com"
        },
        {
            "name": "Gawain Lynch",
            "email": "gawain.lynch@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "camelot/thrower": "^1.0",
        "seld/jsonlint": "^1.4",
        "symfony/polyfill-php70": "^1.4",
        "symfony/polyfill-php71": "^1.0",
        "webmozart/assert": "^1.2"
    },
    "require-dev": {
        "camelot/coding-style": "^1.0",
        "escapestudios/symfony2-coding-standard": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpunit/phpunit": "^7.3",
        "symfony/phpunit-bridge": "^4.1"
    },
    "scripts": {
        "test": "phpunit",
        "lint": [
            "phpcbf",
            "php-cs-fixer fix"
        ]
    },
    "autoload": {
        "psr-4": {
            "Camelot\\Common\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Camelot\\Common\\Tests\\": "tests"
        },
        "files": [
            "tests/Fixtures/JsonMocker.php"
        ]
    }
}
